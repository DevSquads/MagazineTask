@model IEnumerable<Article>
@{
    ViewData["Title"] = "May Articles";

}

<h2>My Articles Management</h2>

@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No pies at this point </td></tr>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>Article ID</th>
            <th>Title</th>
            <th>Short Description</th>
            <th>Actions</th>
        </tr>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Id</td>

                <td>@article.Title</td>

                <td>@article.ShortDescription</td>
                <td>

                    <form asp-action="Delete" asp-route-id="@article.Id" method="post">
                        <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@article.Id">Details</a>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@article.Id">Edit</a>
                        <button type="submit" onclick="return confirm('Do you really want to delete this articles?');" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
<p>
    <a class="btn btn-primary" asp-action="Create">Add new Article</a>

</p>
