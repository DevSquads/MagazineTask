@model Article

@{
    ViewData["Title"] = "Details";
   
}

<!-- Page Content -->
<div class="container">

    <div class="row">

        <!-- Post Content Column -->
       <div class="col-lg-8">

            <!-- Title -->
            <h1 class="mt-4">@Model.Title</h1>

            <!-- Author -->
            <p class="lead">
                by
                <a href="#">@Model.ApplicationUser.UserName</a>
            </p>

            <hr>
            <!-- Post Content -->
            <p class="lead">@Model.ShortDescription</p>

         


            <blockquote class="blockquote">
                <p class="mb-0">@Model.LongDescription</p>
             </blockquote>

            <hr>

            <a class="btn btn-outline-success" asp-action="Index">Back to List</a>
        </div>
        </div>
    </div>



              
            
