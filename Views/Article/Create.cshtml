@model Article
@{
    ViewData["Title"] = "New Article";
    @inject Microsoft.AspNetCore.Identity.UserManager<Magazine.Auth.ApplicationUser> usermanager
}


<h2>Create a new pie</h2>

<form asp-controller="Article" asp-action="Create" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
    <h4>Enter the pie details below</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="@Model.Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="@Model.Title" class="form-control" />
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ShortDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="@Model.ShortDescription" class="form-control" />
            <span asp-validation-for="@Model.ShortDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.LongDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="LongDescription" class="form-control" /></textarea>
            <span asp-validation-for="@Model.LongDescription" class="text-danger"></span>
        </div>
    </div>
    <input hidden="hidden" asp-for="@Model.ApplicationUserId" value="@usermanager.GetUserId(User)" />



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Create Article" />
        </div>
    </div>
</form>
